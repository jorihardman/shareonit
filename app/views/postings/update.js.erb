<% if @posting.errors.any? %>
  $('#edit_posting_form').html('<%= escape_javascript(render :partial => 'postings/form') %>');
  resize_fancybox();
<% else %>
  $.fancybox.close();
  $('#notice').html('Posting updated.');
  $('#posting_<%= @posting.id %>').replaceWith('<%= escape_javascript(raw(posting_div(@posting))) %>');
  $('.buttonset').buttonset();
  $('a[rel*=facebox]').fancybox({
	  'transitionIn'	:	'elastic',
		'transitionOut'	:	'elastic',
		'showNavArrows': false 
  });
  $('tr td:first-child').truncate({max_length: 75});
<% end %>
