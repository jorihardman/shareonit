<%= remotipart_response do %>
  <% if @posting.errors.any? %>
    $('#new_posting_form').html('<%= escape_javascript(render :partial => 'postings/form') %>');
  <% else %>
    $.fancybox.close();
    $('#notice').html('Posting added. Check it out in <%= escape_javascript link_to('my stuff', my_stuff_postings_path) %>.');
    $('#<%= @posting.have ? 'have' : 'need' %> > table > tbody > tr:first').after('<%= escape_javascript(raw(posting_table_row(@posting))) %>');
    $('.buttonset').buttonset();
    $('a[rel*=facebox]').fancybox({
	    'transitionIn'	:	'elastic',
		  'transitionOut'	:	'elastic',
		  'showNavArrows': false 
    });
    $('tr td:first-child').truncate({max_length: 75});
  <% end %>
<% end %>
