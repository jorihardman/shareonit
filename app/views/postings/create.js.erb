<%= remotipart_response do %>
  <% if @posting.errors.any? %>
    $('#new_posting_form').html('<%= escape_javascript render(:partial => 'form') %>');
    resize_fancybox();
  <% else %>
    $.fancybox.close();
    $('#notice').html('Posting added.');
    $('.list_element:first').before('<%= escape_javascript posting_div(@posting) %>');
    $('.buttonset').buttonset();
    $('a[rel*=facebox]').fancybox({
	    'transitionIn'	:	'elastic',
		  'transitionOut'	:	'elastic',
		  'showNavArrows': false,
		  'scrolling': 'no'
    });
  <% end %>
<% end %>