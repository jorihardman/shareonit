<%= remotipart_response do %>
  <% if @posting.errors.any? %>
    $('#new_posting_form').html('<%= escape_javascript(render :partial => 'postings/form') %>');
    resize_fancybox();
  <% else %>
    $.fancybox.close();
    $('#notice').html('Posting added.');
    $('#<%= @posting.have ? 'have' : 'want' %> .list_element:first').before('<%= escape_javascript(raw(posting_div(@posting))) %>');
    $('.buttonset').buttonset();
    $('a[rel*=facebox]').fancybox({
	    'transitionIn'	:	'elastic',
		  'transitionOut'	:	'elastic',
		  'showNavArrows': false 
    });
    $('tr td:first-child').truncate({max_length: 75});
  <% end %>
<% end %>
