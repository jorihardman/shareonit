<% if action_name == 'requests' %>
  <%= link_to 'I Want', new_posting_path(:have => 0), :rel => 'facebox', :class => 'button' %>
<% else %>
  <%= link_to 'I Have', new_posting_path(:have => 1), :rel => 'facebox', :class => 'button' %>
<% end %>

<div id="search">
  <%= form_tag request.path, :method => :get do %>
    <%= text_field_tag 'search', nil, :placeholder => 'search term here' %>
  <% end %>
</div>

<div id="<%= action_name == 'requests' ? 'want' : 'have' %>">
  <%= will_paginate @postings %>
  <%= render :partial => 'postings/list', :object => @postings, :as => :postings %>
  <%= will_paginate @postings %>
</div>
