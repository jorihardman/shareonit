<% content_for :head do %>
  <%= stylesheet_link_tag 'facebox', :media => 'screen' %>
  <%= javascript_include_tag 'facebox' %>
  <%= javascript_include_tag postings_path %>
<% end %>

<h1>Postings</h1>

<div id="search">
  <% form_tag request.path, :method => :get do |f| %>
    <%= text_field_tag :search, params[:search] %><%= submit_tag 'Search' %>
  <% end %>
</div>

<%= new_posting_link %>

<table id="posting_list">
  <tr>
    <th>Description</th>
    <th>From date</th>
    <th>To date</th>
    <th>User</th>
    <th>Status</th>
    <th></th>
  </tr>

<% @postings.each do |posting| %>
  <tr>
    <td><%= posting.description %></td>
    <td><%= posting.from_date %></td>
    <td><%= posting.to_date %></td>
    <td><%= posting.user.full_name %></td>
    <td><%= posting.status %></td>
    <td><%= link_to 'Borrow', posting, :rel => 'facebox' %></td>
  </tr>
<% end %>
</table>

