<% content_for :head do %>
  <%= stylesheet_link_tag 'facebox', :media => 'screen' %>
  <%= javascript_include_tag 'facebox' %>
  <%= javascript_include_tag postings_path %>
<% end %>

<h1>Postings</h1>

<%= new_posting_link %>

<div id="search">
  <% form_tag request.path, :method => :get do %>
    <%= text_field_tag 'search', nil, :placeholder => 'search term here' %><%= submit_tag 'Search', :class => 'button' %>
  <% end %>
</div>

<table id="posting_list">
  <tr>
    <th>Description</th>
    <th>From date</th>
    <th>To date</th>
    <th>User</th>
    <th></th>
  </tr>

<% @postings.each do |posting| %>
  <tr id="posting_<%= posting.id %>">
    <td><%= posting.description %></td>
    <td><%= posting.from_date %></td>
    <td><%= posting.to_date %></td>
    <td><%= posting.user.full_name %></td>
    <% if current_user.id == posting.user_id %>
      <td><%= link_to 'Edit', edit_posting_path(posting), :rel => 'facebox', :class => 'button' %></td>
    <% else %>
      <td><%= link_to action_name =~ /requests/ ? 'Offer' : 'Borrow', posting, :rel => 'facebox', :class => 'button' %></td>
    <% end %>
  </tr>
<% end %>
</table>

