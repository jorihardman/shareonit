<!DOCTYPE html>
<html>
<head>
  <title>Shareon.it</title>
  <%= stylesheet_link_tag 'fancybox' %>
  <%= stylesheet_link_tag 'custom-theme/jquery-ui-custom.css' %>
  <%= stylesheet_link_tag 'main' %>
  <%= javascript_include_tag 'https://ajax.googleapis.com/ajax/libs/jquery/1.4.4/jquery.min.js',
    'jquery.ui-custom.min', 'rails', 'https://github.com/malsup/form/raw/master/jquery.form.js',
    'jquery.remotipart', 'jquery.easing', 'jquery.fancybox', 'jquery.truncator', 'application'
  %>
  <%= yield :head %>
  <%= csrf_meta_tag %>
</head>
<body>
  <div id="header">
    <div id="header_content">
      <%= link_to image_tag('beta_logo.gif'), root_path %>
    </div>
  </div>
  <div id="nav">
    <div id="nav_content">
      <ul id="nav_list">
        <%= raw(navigation_content) %>
      </ul>
      <div id="login"><%= login_link %></div>
    </div>
  </div>
  <div id="page">
    <div id="content">
      <p id="notice"><%= notice %></p>
      <%= yield %>
    </div>  
  </div>
  <div id="footer" class="span-24 last">
    <p>
      <%= link_to 'Provide Feedback!', feedback_path, :rel => 'facebox' %><br/>
      Copyright 2011 Green Gorillaz LLC
    </p>
  </div>
</body>
</html>
