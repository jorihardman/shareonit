$(document).ready(function() {
  //jquery-ui setup
  $('.button').button();
  $('.buttonset').buttonset();
  $('.date').datepicker();
  
  //facebox setup
  $('a[rel*=facebox]').facebox({
    loadingImage : '<%= image_path "loading.gif" %>',
    closeImage   : '<%= image_path "closelabel.png" %>'
  });
  
  $('form').submit(function () {
    $('#loading').show();
  });
});
