<% content_for :head do %>
  <%= stylesheet_link_tag 'facebox', :media => 'screen' %>
  <%= javascript_include_tag 'facebox', postings_path %>
<% end %>


<%= form_for @user_session, :url => session_url do |f| %>
  <%= f.error_messages %>
  <div class="field">
    <%= f.label :email %><br/>
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :password %><br/>
    <%= f.password_field :password %>
  </div>
  <div class="field"
    <%= f.check_box :remember_me %><%= f.label :remember_me %>
  </div>
  <div class="action">
    <%= f.submit "Login", :class => 'button' %>
  </div>
  <p>Not registered? <%= link_to "Register", new_user_path, :rel => 'facebox', :class => 'button' %></p>
<% end %>

