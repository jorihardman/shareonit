<% content_for :head do %>
  <%= stylesheet_link_tag 'facebox', :media => 'screen' %>
  <%= javascript_include_tag 'facebox' %>
  <%= javascript_include_tag new_session_path %>
<% end %>


<%= form_for user_session, :url => session_url do |f| %>
  <%= f.error_messages %>
  <div id="field">
    <%= f.label :email %><br/>
    <%= f.text_field :email %>
  </div>
  <div id="field">
    <%= f.label :password %><br/>
    <%= f.password_field :password %>
  </div>
  <div id="field"
    <%= f.check_box :remember_me %><%= f.label :remember_me %>
  </div>
  <div id="action">
    <%= f.submit "Login" %>
  </div>
  <p>Not registered? <%= link_to "Register", new_user_path, :rel => 'facebox' %></p>
<% end %>

