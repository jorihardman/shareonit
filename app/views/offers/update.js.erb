<% if @offer.errors.any? %>
  $('#edit_offer_form').html('<%= escape_javascript(render :partial => 'offers/form') %>');
<% else %>
  $.facebox.close();
  $('#notice').html('<%= @notice %>');
  $('#offers').html('<%= escape_javascript(render :partial => 'offers/list', :object => [@offer], :as => :offers) %>');
  $('a[rel*=facebox]').facebox({
    loadingImage : '<%= image_path('loading.gif') %>',
    closeImage   : '<%= image_path('closelabel.png') %>'
  });
<% end %>

