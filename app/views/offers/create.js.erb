<% if @offer.errors.any? %>
  $('#new_offer_form').html('<%= escape_javascript(render :partial => 'offers/form') %>');
<% else %>
  $.facebox.close();
  $('#notice').html('<%= @notice %>');
  $('#offer_list').append('<%= raw(offer_table_row(@offer)) %>');
  $('#offer_link').remove();
  $('a[rel*=facebox]').facebox({
    loadingImage : '<%= image_path('loading.gif') %>',
    closeImage   : '<%= image_path('closelabel.png') %>'
  });
<% end %>

