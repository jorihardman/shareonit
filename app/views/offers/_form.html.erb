<%= form_for @offer,
  :url => action_name == 'new' ? posting_offers_path : posting_offer_path(params[:posting_id], params[:id]),
  :remote => true do |f|
%>
  <%= f.error_messages %>
  <div class="field">
    <%= f.label :message %><br/>
    <%= f.text_area :message %>
  </div>
  <% if action_name == 'new' %>
  <div class="field">
    <%= check_box_tag 'add_to_inventory', 1, true %> Add to inventory?
  </div>
  <% end %>
  <%= f.hidden_field :user_id, :value => current_user.id %>
  <%= f.hidden_field :posting_id, :value => params[:posting_id] %>
  <%= f.submit %>
<% end %>

