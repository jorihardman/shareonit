<%= link_to 'New Community', new_community_path, :class => 'button', :rel => 'facebox' %>

<% if not @invitations.empty? %>
<div id="invitations">
  <h2>Invitations</h2>
  <table id="invitation_list" class="ui-widget ui-widget-content">
    <tr class="ui-widget-header">
      <th>Name</th>
      <th>Description</th>
      <th>Zip Code</th>
      <th></th>
    </tr>

  <% @invitations.each do |invitation| %>
    <%= raw(invitation_table_row(invitation)) %>
  <% end %>
  </table>
  <br/>
  <h2>Communities</h2>
</div>
<% end %>

<table id="community_list" class="ui-widget ui-widget-content">
  <tr class="ui-widget-header">
    <th>Name</th>
    <th>Description</th>
    <th>Zip Code</th>
    <th></th>
  </tr>

<% @communities.each do |community| %>
  <%= raw(community_table_row(community)) %>
<% end %>
</table>

