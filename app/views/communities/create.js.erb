<% if @community.errors.any? %>
  $('#new_community_form').html('<%= escape_javascript render('communities/form') %>');
  resize_fancybox();
<% else %>
  $.fancybox.close();
  $('#notice').html('Community added.');
  $('.list_element:first').before('<%= escape_javascript community_div(@community) %>');
  $('.buttonset').buttonset();
<% end %>
