<% if @community.errors.any? %>
  $('#new_community_form').html('<%= escape_javascript(render :partial => 'communities/form') %>');
<% else %>
  $.facebox.close();
  $('#notice').html('Community added.');
  $('#community_list > tbody > tr:first').after('<%= escape_javascript(raw(community_table_row(@community))) %>');
  $('.buttonset').buttonset();
  $('a[rel*=facebox]').facebox({
    loadingImage : '<%= image_path('loading.gif') %>',
    closeImage   : '<%= image_path('closelabel.png') %>'
  });
<% end %>

