<%= form_for @community, :remote => true do |f| %>
  <%= f.error_messages %>
  <div class="field">
    <%= f.label :name %><br/>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :zip_code %><br/>
    <%= f.text_field :zip_code %>
  </div>
  <div class="field">
    <%= f.label :description %><br/>
    <%= f.text_field :description %>
  </div>
  <div class="field">
    <%= f.label :emails, 'User emails' %> (comma separated)<br/>
    <%= text_area_tag 'emails' %>
  </div>
  <%= f.hidden_field :user_id, :value => current_user.id %>
  <div class="actions">
    <%= f.submit action_name == 'new' ? 'Create' : 'Update', :class => 'button' %>
  </div>
<% end %>
