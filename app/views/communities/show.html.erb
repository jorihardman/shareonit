<h1><%= @community.name %></h1>

<div class="buttonset">
<%= link_to 'Add Users', new_community_invitation_path(@community), :rel => 'facebox' %>
<%= link_to 'Edit', edit_community_path(@community), :rel => 'facebox' %>
<%= link_to 'Delete', community_path(@community), :method => 'delete', 
    :confirm => 'Are you sure? All postings will be deleted.'
%>
</div>

<div id="description">
<p>
  <b>Description:</b>
  <%= @community.description %>
</p>
</div>

<p>
  <b>Zip code:</b>
  <%= @community.zip_code %>
</p>

<% unless @requests.blank? %>
<div id="requests">
  <h2>Join Requests</h2>
  <%= will_paginate @requests, :param_name => :req_page %>
    <%= render :partial => 'memberships/list', :object => @requests, :as => :memberships %>
  <%= will_paginate @requests, :param_name => :req_page %>
  <br/>
</div>
<% end %>

<div id="members">
  <h2>Active Members</h2>
  <%= will_paginate @members, :param_name => :mem_page %>
    <%= render :partial => 'memberships/list', :object => @members, :as => :memberships %>
  <%= will_paginate @members, :param_name => :mem_page %>
</div>